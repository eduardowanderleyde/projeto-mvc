<%= link_to "create product", new_product_path %>

<% @products.each do |product| %>

  <p><%= product.name %></p>
  <p><%= product.price %></p>
  <p><%= product.quantity %></p>

<%= link_to "Show product", product %>
<%= link_to "Edit product", edit_product_path(product) %>
<%= button_to "Delete product", product, method: :delete, form:{ data: {turbo_confirm: "Are you sure to delete this product?"}} %>

<% end %>

